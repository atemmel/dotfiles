{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
			"rootpatterns": [".ccls", "compile_commands.json"],
			"initializationOptions": {
				"cache": {
					"directory": ".ccls-cache"
				}
			},
			"client": {
				"snippetsupport": true
			}
		},

		"flow": {
			"command": "flow",
			"args": ["lsp"],
			"filetypes": ["javascript", "javascriptreact"],
			"initializationOptions": {},
			"requireRootPattern": true,
			"settings": {},
			"rootPatterns": [".flowconfig"]
		},

		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod"],
			"filetypes": ["go"],
			"initializationOptions": {
				"usePlaceholders": true
			}
		}
	},
	"java.configuration.runtimes": [
	{
		"name": "JavaSE-14",
		"path": "/path/to/jdk-14",
		"default": true
	}
  ],
  "java.format.settings.url": "/home/temmel/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml"
}
