{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
			"rootpatterns": [".ccls-root", "compile_commands.json"],
			"initializationOptions": {
				"cache": {
					"directory": ".ccls-cache"
				}
			}
		}
	},

	"languageserver": {
		"flow": {
		  "command": "flow",
		  "args": ["lsp"],
		  "filetypes": ["javascript", "javascriptreact"],
		  "initializationOptions": {},
		  "requireRootPattern": true,
		  "settings": {},
		  "rootPatterns": [".flowconfig"]
		}
  }
}
