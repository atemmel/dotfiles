{
	"languageserver": {
		"flow": {
			"command": "flow",
			"args": ["lsp"],
			"filetypes": ["javascript", "javascriptreact"],
			"initializationOptions": {},
			"requireRootPattern": true,
			"settings": {},
			"rootPatterns": [".flowconfig"]
		},

		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod"],
			"filetypes": ["go"],
			"initializationOptions": {
				"usePlaceholders": true
			}
		},
		"zls" : {
		  "command": "zls",
		  "filetypes": ["zig"]
		}
	}
}
