{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
			"rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		},
		"flow": {
			"command": "flow",
			"args": ["lsp"],
			"filetypes": ["javascript", "javascriptreact"],
			"initializationOptions": {},
			"requireRootPattern": true,
			"settings": {},
			"rootPatterns": [".flowconfig"]
		},

		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod"],
			"filetypes": ["go"],
			"initializationOptions": {
				"usePlaceholders": true
			}
		},
		"digestif": {
			"command": "digestif",
			"filetypes": ["tex", "plaintex", "context"]
		},
		"zls" : {
           "command": "zls",
           "filetypes": ["zig"]
       }
	},
	"java.configuration.runtimes": [
	{
		"name": "JavaSE-14",
		"path": "/path/to/jdk-14",
		"default": true
	}
  ],
  "java.format.settings.url": "/home/temmel/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml"
}
